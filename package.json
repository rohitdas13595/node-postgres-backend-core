{
  "name": "@smoke-trees/postgres-backend",
  "version": "2.1.0",
  "description": "Postgres Backend Core files",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "build-nolint": "tsc",
    "test": "NODE_OPTIONS=--enable-source-maps mocha --exit --file dist/tests/index.test.js",
    "test-w": "set NODE_OPTIONS=--enable-source-maps && set CI=true && mocha --exit dist/tests/index.test.js",
    "watch": "tsc -w",
    "dev": "NODE_OPTIONS=--enable-source-maps nodemon -L -w ./dist -w ./src -w docs/build/docs.yaml dist/index.js",
    "prepare": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smoke-trees/node-postgres-backend-core.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "express",
    "postgres"
  ],
  "author": "SmokeTrees",
  "license": "MIT",
  "homepage": "https://github.com/smoke-trees/node-postgres-backend-core#readme",
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  },
  "dependencies": {
    "@smoke-trees/smoke-context": "^1.4.8",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "winston": "^3.10.0",
    "typeorm": "0.3.20",
    "express": "^4.18.3"
  },
  "devDependencies": {
    "@types/chai": "^4.3.12",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "cors": "^2.8.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.24",
    "mocha": "^10.3.0",
    "typescript": "5.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.57.0",
    "c8": "^8.0.1",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0"
  }
}
